@model SikayetTakipSitesi.ViewModels.HomeViewModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
    int? userid = Context.Session.GetInt32("MEMBER_ID");
    string userName = Context.Session.GetString("MEMBER_NAME");
    string userSurName = Context.Session.GetString("MEMBER_SURNAME");
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Accounting - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/accounting-master/css/animate.css">

    <link rel="stylesheet" href="~/accounting-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/accounting-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/accounting-master/css/magnific-popup.css">

    <link rel="stylesheet" href="~/accounting-master/css/flaticon.css">
    <link rel="stylesheet" href="~/accounting-master/css/style.css">
</head>
<body>

    <div class="wrap">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="bg-wrap">
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center">
                                <p class="mb-0 phone pl-md-2">
                                    <a href="#" class="mr-2"><span class="fa fa-phone mr-1"></span> +00 1234 567</a>
                                    <a href="#"><span class="fa fa-paper-plane mr-1"></span> sikayetetl@email.com</a>
                                </p>
                            </div>
                            <div class="col-md-6 d-flex justify-content-md-end">
                                <div class="social-media">
                                    <p class="mb-0 d-flex">
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-facebook"><i class="sr-only">Facebook</i></span></a>
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-twitter"><i class="sr-only">Twitter</i></span></a>
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-instagram"><i class="sr-only">Instagram</i></span></a>
                                        <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-dribbble"><i class="sr-only">Dribbble</i></span></a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item"><a href="/Home/Index/" class="nav-link">@Localizer["ana_sayfa"]</a></li>
                    <li class="nav-item"><a href="/CategoryBrand/Index/" class="nav-link">@Localizer["markalar"]</a></li>

                    <li class="nav-item"><a href="/Complaint/Index/" class="nav-link">@Localizer["sikayet_et"]</a></li>
                </ul>
            </div>
            <a class="btn btn-secondary" asp-controller="Login" asp-action="Logout">@Localizer["cıkıs"]</a>
            <form method="get" asp-action="Index" asp-controller="User" asp-route-id="@userid" asp-route-type="0">
                <button type="submit" class="btn btn-primary2 font-weight-light "> @userName  @userSurName </button>
            </form>
        </div>
    </nav>
    <!-- END nav -->
    <div class="hero-wrap">
        <div class="home-slider owl-carousel">
            <div class="slider-item" style="background-image:url('../../accounting-master/images/bg_1.jpg');">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row no-gutters slider-text align-items-center justify-content-center">
                        <div class="col-md-8 ftco-animate">
                            <div class="text w-100 text-center">
                                @*<h2>We Business Grow</h2>*@
                                <h1 class="mb-4">@Localizer["yazi1"]</h1>
                                <p><a href="#" class="btn btn-white">@Localizer["sikayet_yaz"]</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="slider-item" style="background-image: url('../../accounting-master/images/bg_2.jpg');">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row no-gutters slider-text align-items-center justify-content-center">
                        <div class="col-md-8 ftco-animate">
                            <div class="text w-100 text-center">
                                @*<h2>We Support Business</h2>*@
                                <h1 class="mb-4">@Localizer["yazi2"]</h1>
                                <p><a href="#" class="btn btn-white">@Localizer["sikayet_yaz"]</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="slider-item" style="background-image:url('../../accounting-master/images/bg_3.jpg');">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row no-gutters slider-text align-items-center justify-content-center">
                        <div class="col-md-8 ftco-animate">
                            <div class="text w-100 text-center">
                                @*<h2>We Give Advice</h2>*@
                                <h1 class="mb-4">@Localizer["yazi3"]</h1>
                                <p><a href="#" class="btn btn-white">@Localizer["sikayet_yaz"]</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row d-flex no-gutters">
                <div class="col-md-6 d-flex">
                    <div class="img img-video d-flex align-self-stretch align-items-center justify-content-center justify-content-md-center mb-4 mb-sm-0" style="background-image:url('../../accounting-master/images/about.jpg');">
                    </div>
                </div>
                <div class="col-md-6 pl-md-5 py-md-5">

                    <div class="services-2 w-100 d-flex">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-wealth"></span></div>
                        <div class="text pl-4">
                            <h4>@Localizer["yazi4-1"] @ViewBag.MarkaSayisi @Localizer["yazi4-2"]</h4>
                            <p></p>
                        </div>
                    </div>
                    <div class="services-2 w-100 d-flex">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-accountant"></span></div>
                        <div class="text pl-4">
                            <h4>@Localizer["yazi5-1"] @ViewBag.MusteriSayisi @Localizer["yazi5-2"] </h4>
                        </div>
                    </div>
                    <div class="services-2 w-100 d-flex">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-teamwork"></span></div>
                        <div class="text pl-4">
                            <h4>@Localizer["yazi6-1"] @ViewBag.SikayetSayisi @Localizer["yazi6-2"]</h4>
                        </div>
                    </div>
                    <div class="services-2 w-100 d-flex">
                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-accounting"></span></div>
                        <div class="text pl-4">
                            <h4>@Localizer["yazi7-1"] @ViewBag.YorumSayisi @Localizer["yazi7-2"] </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section bg-light ftco-no-pt">
        <div class="container">
            <div class="media-body" align="center"><b><h1 class="heading">@Localizer["yazi14"]</h1> </b></div><br /><br />
            <div class="row">
                <div class="col-md-6 col-lg-3 d-flex services align-self-stretch px-4 ftco-animate">
                    <div class="d-block">
                        <div class="icon d-flex mr-2">
                            <span class="flaticon-accounting-1"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">@Localizer["yeni"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 d-flex services align-self-stretch px-4 ftco-animate">
                    <div class="d-block">
                        <div class="icon d-flex mr-2">
                            <span class="flaticon-tax"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">@Localizer["yazi8"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 d-flex services align-self-stretch px-4 ftco-animate">
                    <div class="d-block">
                        <div class="icon d-flex mr-2">
                            <span class="flaticon-loan"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">@Localizer["yazi9"]</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 d-flex services align-self-stretch px-4 ftco-animate">
                    <div class="d-block">
                        <div class="icon d-flex mr-2">
                            <span class="flaticon-budget"></span>
                        </div>
                        <div class="media-body">
                            <h3 class="heading">@Localizer["yazi10"]</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <section class="ftco-section testimony-section bg-light">
        <div class="overlay"></div>
        <div class="container">
            <div class="row justify-content-center pb-5 mb-3">
                <div class="col-md-7 heading-section heading-section-white text-center ftco-animate">
                    @*<span class="subheading"></span>*@
                    <h2>@Localizer["yazi11"]</h2>
                </div>
            </div>
            <div class="row ftco-animate">
                <div class="col-md-12">
                    <div class="carousel-testimony owl-carousel ftco-owl">


                        @foreach (var brand in Model.Brands)
                        {
                            <div class="item">
                                <div class="testimony-wrap py-4">
                                    <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-quote-left"></span></div>
                                    <div class="text">
                                        <p class="mb-4">@brand.BrandContent </p>
                                        <div class="d-flex align-items-center">
                                            <div class="user-img" style="background-image: url(' @brand.BrandPhoto ');"></div>
                                            <div class="pl-3">
                                                <p class="name">@brand.BrandName</p>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>


                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pt bg-light ftco-faqs">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="img-faqs w-100">
                        <div class="img mb-4 mb-sm-0" style="background-image:url('../../accounting-master/images/about-2.jpg');">
                        </div>
                        <div class="img img-2 mb-4 mb-sm-0" style="background-image:url('../../accounting-master/images/about-1.jpg');">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pl-lg-5">
                    <div class="heading-section mb-5 mt-5 mt-lg-0">
                     
                        <h2 class="mb-3">@Localizer["yazi13"]</h2>
                     
                    </div>
                    <div id="accordion" class="myaccordion w-100" aria-multiselectable="true">
                        <div class="card">
                            <div class="card-header p-0" id="headingOne">
                                <h2 class="mb-0">
                                    <button href="#collapseOne" class="d-flex py-3 px-4 align-items-center justify-content-between btn btn-link" data-parent="#accordion" data-toggle="collapse" aria-expanded="true" aria-controls="collapseOne">
                                        <p class="mb-0">@Localizer["yazi12"]</p>
                                        <i class="fa" aria-hidden="true"></i>
                                    </button>
                                </h2>
                            </div>
                            <div class="collapse show" id="collapseOne" role="tabpanel" aria-labelledby="headingOne">
                                <div class="card-body py-3 px-0">
                                    @foreach (var complaint in Model.BrandNames)
                                    {
                                        <div class="cases-wrap d-md-flex align-items-center" style="size:50px">
                                          
                                            <div class="text pl-md-5">
                                                <a> <span class="cat">@complaint </span></a>

                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>



    <footer class="footer">
        <div class="register-left">
            <div class="register">
                <div class="row">
                    <div class="col-sm-6 text-right">
                        @await Html.PartialAsync("_SelectLanguagePartial")
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


    <script src="~/accounting-master/js/jquery.min.js"></script>
    <script src="~/accounting-master/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/accounting-master/js/popper.min.js"></script>
    <script src="~/accounting-master/js/bootstrap.min.js"></script>
    <script src="~/accounting-master/js/jquery.easing.1.3.js"></script>
    <script src="~/accounting-master/js/jquery.waypoints.min.js"></script>
    <script src="~/accounting-master/js/jquery.stellar.min.js"></script>
    <script src="~/accounting-master/js/jquery.animateNumber.min.js"></script>
    <script src="~/accounting-master/js/owl.carousel.min.js"></script>
    <script src="~/accounting-master/js/jquery.magnific-popup.min.js"></script>
    <script src="~/accounting-master/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/accounting-master/js/google-map.js"></script>
    <script src="~/accounting-master/js/main.js"></script>

</body>
</html>