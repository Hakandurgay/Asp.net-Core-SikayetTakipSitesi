<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Project Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- Google fonts -->
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=latin-ext" rel="stylesheet">
    <!-- Google fonts -->
    <!-- css files -->
    <link href="~/weblogin/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="~/weblogin/stylesheet" href="css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

    <link href="~/weblogin/css/popup-box.css" rel="stylesheet" type="text/css" media="all" /> <!-- popup box css -->

</head>
<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <div class="register-left">
                    <div class="register">
                        <div class="row">
                            <div class="col-sm-6 text-right">
                                @await Html.PartialAsync("_SelectLanguagePartial")
                            </div>
                        </div>
                    </div>
                </div><br />
                <a href="#">@Localizer["sikayet_et"]</a>
            </div>
                    <div class="social">
                        <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                        <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                        <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                        <li><a href="#"><span class="fa fa-google-plus"></span></a></li>
                    </div>
                    <div class="clear"></div>
                </div>

                <div class="register-full">

                    <div class="register-right" style=" background-color:lightgray">
                        <div class="register-in">
                            <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">@Localizer["Kayıt_Ol"] »</a>
                        </div>
                        <div class="register-in middle">
                            <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">@Localizer["Admin_Giris"] »</a>
                        </div>
                        <div class="register-in">
                            <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">@Localizer["Kullanıcı_Giris"]»</a>
                        </div>
                        <div class="clear"> </div>
                    </div>
                    <div class="clear"> </div>
                </div>
                <!-- copyright -->
                <!-- //copyright -->
</section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>@Localizer["Admin_Giris"]</h3> <br />
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="/Login/SignInAdmin" method="post">
                            <input type="email" class="email" name="MemberMail" Placeholder="@Localizer["mail"]" required="" />
                            <input type="password" class="password" name="MemberPassword" Placeholder="@Localizer["sifre"]" required="" />
                            <input type="submit" value="@Localizer["giris"]">
                        </form>
                    </div>
                    <div class="login-agileits-bottom">

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>@Localizer["Kullanıcı_Giris"]</h3>
                    <p>@Localizer["bilgi"]</p>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        <form action="/Login/SignIn" method="post">
                            <input type="email" class="email" name="MemberMail" Placeholder="@Localizer["mail"]" required="" />
                            <input type="password" class="password" name="MemberPassword" Placeholder="@Localizer["sifre"]" required="" />
                            <input type="submit" value="@Localizer["giris"]">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>@Localizer["form"]</h3>
                    <div class="login-agileits-top">
                        <form action="/Login/Register" method="post">
                            <input type="text" class="name" name="MemberName" Placeholder="@Localizer["isim"]" required="" />
                            <input type="text" class="name" name="MemberLastName" Placeholder="@Localizer["soyisim"] " required="" />
                            <input type="email" class="email" name="MemberMail" Placeholder="@Localizer["mail"]" required="" />
                            <input type="password" class="password" name="MemberPassword" Placeholder="@Localizer["sifre"]" required="" />
                            <input type="submit" value="@Localizer["Kayıt_Ol"]">
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

</body>
<!-- //body ends -->
</html>

