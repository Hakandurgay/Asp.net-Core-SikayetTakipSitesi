
@model SikayetTakipSitesi.ViewModels.UserViewModel

@{

    ViewData["Title"] = "Index";
 Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="cases-wrap d-md-flex align-items-center" style="border-style:ridge; background-color:#f2f2f2; width: 600px">
    <div class="img" style="background-image:url(kullanıcı photo ); background-size: 250px; background-color:white"></div>

    <div class="text pl-md-5">
        <a> <span class="cat"> @ViewBag.username @ViewBag.userLastname</span></a>
    </div>
</div>

@if (ViewBag.kontrol == "sikayet")
{

<h2>ŞİKAYETLER</h2>
@foreach (var complaint in Model.Complaints)
{
    <div class="col-md-4 d-flex ftco-animate">
        <div class="blog-entry align-self-stretch">
            <div class="text p-4">
                <div class="meta mb-2">
                    <div>@complaint.ComplaintTitle</div> <br />
                    <div>@complaint.FK_BRAND_ID.BrandName</div>
                    <form method="get" asp-action="Index" asp-controller="ComplaintDetail" asp-route-id="@complaint.PK_COMPLAINT_ID">
                        <div><button type="submit" class="btn btn-primary2 font-weight-light">@complaint.ComplaintContent</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
}
else
{
<h2>YORUMLAR</h2>
@foreach (var comment in Model.Comments)
{
    <div class="col-md-4 d-flex ftco-animate">
        <div class="blog-entry align-self-stretch">
            <div class="text p-4">
                <div class="meta mb-2">
                    <div>@comment.Complaint.ComplaintTitle</div> <br />
                    <div>@comment.Complaint.FK_BRAND_ID.BrandName</div>
                    <form method="get" asp-action="Index" asp-controller="ComplaintDetail" asp-route-id="@comment.PK_COMMENT_ID">
                        <div><button type="submit" class="btn btn-primary2 font-weight-light"> @comment.CommentContent</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
}



@section Kategoriler{
    <div class="sidebar-box ftco-animate">
        <div class="categories">
            <form method="get" asp-action="Index" asp-controller="User" >
                <li><button type="submit" class="btn btn-primary2 font-weight-light " asp-route-type="1"  > <span class="ion-ios-arrow-forward">Şikayetler</span></button></li>
                 
                <li><button type="submit" class="btn btn-primary2 font-weight-light "  asp-route-type="2"  ><span class="ion-ios-arrow-forward">Yorumlar</span></button></li>
            </form>
        </div>
    </div>
}
